<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_25"
    android:elevation="3dp"
    android:padding="20dp">

    <TextView
        android:id="@+id/mSelectLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Select Language"
        android:textColor="@color/black_333333"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/mArabic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="Arabic"
        android:drawablePadding="13dp"
        android:gravity="center_vertical"
        android:textColor="@color/black_333333"
        android:textSize="18sp"
        android:drawableStart="@drawable/lng_arb"
        android:drawableEnd="@drawable/radio_button"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mSelectLanguage"

        />




    <TextView
        android:id="@+id/mEnglish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="English"
        android:drawablePadding="13dp"
        android:gravity="center_vertical"
        android:textColor="@color/black_333333"
        android:textSize="18sp"
        android:drawableStart="@drawable/lng_eng_selected"
        android:drawableEnd="@drawable/radio_button_active"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mArabic"

        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_medium"
        android:background="@drawable/bg_round_button"
        android:layout_marginTop="40dp"
        android:paddingVertical="20dp"
        android:text="Continue"
        app:layout_constraintTop_toBottomOf="@+id/mEnglish"
        />









</androidx.constraintlayout.widget.ConstraintLayout>